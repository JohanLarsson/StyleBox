<Window x:Class="StyleBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:StyleBox.Controls;assembly=StyleBox.Controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="525"
        Height="350"
        mc:Ignorable="d">
    <UniformGrid Rows="1">
        <controls:CustomControl Style="{StaticResource {x:Static controls:Keys.LocalColorStyleKey}}" />
        <controls:CustomControl Style="{StaticResource {x:Static controls:Keys.DynamicBlueBrushStyleKey}}" />
        <controls:CustomControl Style="{StaticResource {x:Static controls:Keys.DynamicColorBrushStyleKey}}" />
    </UniformGrid>
</Window>
